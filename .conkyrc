#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window  yes
own_window_transparent no
own_window_type normal
own_window_hints undecorate,sticky,skip_taskbar,skip_pager 

#borders
draw_borders no
border_margin 1

#shades
draw_shades no

#position
gap_x 0
gap_y 4
alignment top_left

#behaviour
update_interval 1

#colour
default_color CCCCCC #676767
color2 FFFFFF
#color3 f6830f
#color4 fdc065
#color2 9966FF
color3 cccccc
color4 cccccc
#default_shade_color 000000
own_window_colour 393939

#font
use_xft yes
xftfont LiHeiPro:pixelsize=11
#to prevent window from moving
use_spacer none
minimum_size 1440 0
