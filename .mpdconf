# Files and directories #################################

playlist_directory	"~/.mpd/playlists"
db_file			"~/.mpd/database"
log_file		"~/.mpd/log"
pid_file		"~/.mpd/pid"
state_file		"~/.mpd/state"
sticker_file		"~/.mpd/sticker.sql"
port			"6600"
filesystem_charset  	"UTF-8"
id3v1_encoding  	"GBK"


# Audio Output ##########################################

audio_output {
        type		"alsa"
	name		"MPD ALSA"
	device		"hw:0,0"	
	format		"44100:16:2"	
	mixer_type      "hardware"	
	mixer_device	"default"	
	mixer_control	"PCM"		
	mixer_index	"0"	
}

